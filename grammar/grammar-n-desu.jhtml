      @HI{{@FG{{@KJ{{beginning^spirit}}:genki}}ganaidesune.@KJ{{what}}ga@FG{{@KJ{{quandary}}:koma}}tteirukotogaaru@EM{{njanaidesuka}}.}}
  </td> </tr>

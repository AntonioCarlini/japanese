      @HI{{sonokotoha@KJ{{private}}niha@KJ{{part}}kari@EM{{kanemasu}}kara,@FG{{@KJ{{section^long}}:buchou}}nio@KJ{{hear}}ninatte@KJ{{below}}dasai.}}
  </td> </tr>
  <tr class="en"> <td>

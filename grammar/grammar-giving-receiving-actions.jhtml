@GRMIDX{{index="Giving and Receiving Actions" grammar="Giving and Receiving Actions"}}
@GRMIDX{{index="@HI{{teageru}}" grammar="@Vte{{}}@HI{{ageru}}" anchor="ageru"}}
@GRMIDX{{index="@HI{{tesashiageru}}" grammar="@Vte{{}}@HI{{sashiageru}}" anchor="sashiageru"}}
@GRMIDX{{index="@HI{{teyaru}}" grammar="@Vte{{}}@HI{{yaru}}" anchor="yaru"}}
@GRMIDX{{index="@HI{{temorau}}" grammar="@Vte{{}}@HI{{morau}}" anchor="morau"}}
@GRMIDX{{index="@HI{{teitadaku}}" grammar="@Vte{{}}@HI{{itadaku}}" anchor="itadaku"}}
